<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/background_play_all_song">

    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/iv_music_list"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/ic_music_player"/>

    <TextView
        android:id="@+id/tv_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/iv_music_list"
        android:singleLine="true"
        android:text="@string/title"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_music_list" />

    <TextView
        android:id="@+id/tv_music_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_music_name"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/iv_music_list"
        android:singleLine="true"
        android:text="@string/subtitle"
        android:textColor="@color/gray_color"
        android:textSize="12sp"
        android:textStyle="normal"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_music_list" />

    <ImageView
        android:id="@+id/play_pause_song"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_black"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

</RelativeLayout>