<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bkav.music">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="com.bkav.music.MusicApplication"
        android:allowBackup="true"
        android:icon="@drawable/splash_play_music_192"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splash_play_music_192"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver
            android:name="com.bkav.music.broadcast.MusicReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.bkav.music.activity.MainActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <service
            android:name="com.bkav.music.service.MediaService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="com.bkav.music.activity.SplashScreenActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>